pipeline {
    
    agent any

    environment {
        CI = 'true'
    }

    stages {
        stage('Install') { 
            steps {
                bat 'npm install --registry=https://registry.npm.taobao.org'
            }
        }

        stage('test') { 
            steps {
                bat 'npm test'
            }
        }

        stage('Deploy') { 
            steps {
                bat 'npm build' 
                bat 'xcopy build\\* D:\\deploy\\frontend /e /y'
            }
        }
    }
}